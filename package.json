{
  "name": "knot",
  "version": "1.1.0",
  "description": "办公数字化工具 - 邮件驱动的工作流管理",
  "homepage": "https://github.com/jankiny/",
  "author": {
    "name": "Jankiny",
    "email": "yangzlnn@foxmail.com"
  },
  "main": "electron/main.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && set NODE_ENV=development&& electron .\"",
    "backend:build:win": "cd backend && conda run -n go go build -ldflags \"-s -w\" -o ..\\electron\\bin\\knot-backend.exe",
    "backend:build:linux": "cd backend && go build -ldflags \"-s -w\" -o ../electron/bin/knot-backend",
    "electron:build": "vite build && electron-builder",
    "electron:build:win": "pnpm run backend:build:win && vite build && electron-builder --win",
    "electron:build:linux": "pnpm run backend:build:linux && vite build && electron-builder --linux",
    "test": "vitest"
  },
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "antd": "^5.12.0",
    "axios": "^1.6.0",
    "dayjs": "^1.11.19",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.jankiny.knot",
    "productName": "Knot - 绳结",
    "copyright": "Copyright © 2026 Jankiny",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "!electron/bin/.gitkeep"
    ],
    "extraResources": [
      {
        "from": "electron/bin/",
        "to": "bin/",
        "filter": [
          "**/*",
          "!.gitkeep"
        ]
      }
    ],
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "electron/assets/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "unicode": true,
      "language": "2052",
      "artifactName": "${productName} Setup ${version}.${ext}"
    },
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Office",
      "icon": "electron/assets/icons"
    },
    "icon": "electron/assets/icons/512x512.png",
    "mac": {
      "category": "public.app-category.productivity"
    }
  }
}